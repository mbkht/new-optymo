<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="4dp"
            >
            <TextView
                android:id="@+id/route_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_bus_bg"
                android:gravity="center"
                android:text="@string/route_icon_default_text"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                />

            <TextView
                android:id="@+id/trip_headsign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_headsign_default_text"
                android:gravity="center"
                android:textColor="?colorOnSecondaryContainer"
                android:textSize="20sp"
                android:layout_marginStart="4dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/time_left_text"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/time_left_default_text"
            android:textColor="?colorOnSecondaryContainer"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:visibility="visible"
        android:id="@+id/arrival_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/arrival_time_default_text"
        android:textColor="?colorOnSecondaryContainer"
        android:layout_margin="8dp"
        android:padding="8dp"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="?colorOnSecondaryContainer"
        />

</LinearLayout>