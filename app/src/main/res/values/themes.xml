<resources>
    <!-- Base application theme. -->
    <style name="Theme.BusSchedules" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime_500</item>
        <item name="colorPrimaryVariant">@color/lime_500_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_300</item>
        <item name="colorSecondaryVariant">@color/green_300_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Color on surface -->
        <item name="colorOnSurfaceVariant">#BDBDBD</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>